<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".topUp.RetrieveDetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Here are Instant EFT transaction details"
                android:textAlignment="center"
                android:textColor="@color/primaryColorLight"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank location"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Name"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SWIFT CODE : BKFJDIEJD"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>

            <Button
                android:id="@+id/btn_cont"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/continue_btn"
                android:background="@drawable/button_background"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="60dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>